<h1>Editar Nota</h1>

<%= form_with model: @nota, url: nota_path(@nota), method: :patch do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>s
  </div>
  
  <div>
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>
  
  <%= form.submit 'Guardar' %>
<% end %>
